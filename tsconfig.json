{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["es5", "es6", "dom"],
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
